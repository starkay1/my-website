# 生产环境配置模板
# 复制此文件为 .env.production 并填入实际值

# 应用基础配置
NODE_ENV=production
NEXT_PUBLIC_BASE_URL=https://your-domain.com
NEXTAUTH_URL=https://your-domain.com

# 数据库配置 (生产环境)
DATABASE_URL="postgresql://username:password@your-db-host:5432/spaceplus_prod"

# JWT 密钥 (请使用强密码)
JWT_SECRET="your-super-strong-jwt-secret-key-for-production"
NEXTAUTH_SECRET="your-super-strong-nextauth-secret-key-for-production"

# 邮件配置 (生产环境)
SMTP_HOST="smtp.your-email-provider.com"
SMTP_PORT="587"
SMTP_USER="your-production-email@your-domain.com"
SMTP_PASS="your-email-app-password"
SMTP_FROM="noreply@your-domain.com"
SMTP_FROM_NAME="Spaceplus Worldwide"

# 邮件接收配置
NOTIFICATION_EMAIL="admin@your-domain.com"
HR_EMAIL="hr@your-domain.com"
SUPPORT_EMAIL="support@your-domain.com"

# 联系表单配置
CONTACT_WEBHOOK_URL="https://your-webhook-service.com/contact"

# 文件上传配置
UPLOAD_MAX_SIZE="10485760"  # 10MB
UPLOAD_ALLOWED_TYPES="image/jpeg,image/png,image/webp,application/pdf"
UPLOAD_PATH="./uploads"

# Redis 配置
REDIS_URL="redis://your-redis-host:6379"
REDIS_PASSWORD="your-redis-password"

# 数据库配置 (Docker)
POSTGRES_DB="spaceplus"
POSTGRES_USER="spaceplus"
POSTGRES_PASSWORD="your-strong-database-password"

# Google OAuth (生产环境)
GOOGLE_CLIENT_ID="your-production-google-client-id"
GOOGLE_CLIENT_SECRET="your-production-google-client-secret"

# 微信小程序 (如果使用)
WECHAT_APP_ID="your-wechat-app-id"
WECHAT_APP_SECRET="your-wechat-app-secret"

# 阿里云 OSS (如果使用)
ALIYUN_ACCESS_KEY_ID="your-aliyun-access-key-id"
ALIYUN_ACCESS_KEY_SECRET="your-aliyun-access-key-secret"
ALIYUN_OSS_BUCKET="your-oss-bucket"
ALIYUN_OSS_REGION="oss-cn-hangzhou"

# 监控和日志
SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"
LOG_LEVEL="info"

# 安全配置
CSRF_SECRET="your-csrf-secret-key"
SESSION_SECRET="your-session-secret-key"

# 第三方服务
CLOUDFLARE_API_TOKEN="your-cloudflare-api-token"
CLOUDFLARE_ZONE_ID="your-cloudflare-zone-id"

# 备份配置
BACKUP_S3_BUCKET="your-backup-s3-bucket"
BACKUP_S3_ACCESS_KEY="your-backup-s3-access-key"
BACKUP_S3_SECRET_KEY="your-backup-s3-secret-key"
BACKUP_S3_REGION="us-east-1"