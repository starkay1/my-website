# 数据库配置
DATABASE_URL="postgresql://username:password@localhost:5432/spaceplus"

# JWT 密钥（生产环境请使用强密码）
JWT_SECRET="your-super-secret-jwt-key-change-in-production"

# Next.js 配置
NEXT_PUBLIC_BASE_URL="http://localhost:3000"
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-key"

# 邮件配置
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
SMTP_FROM="noreply@spaceplus.com"
SMTP_FROM_NAME="SpacePlus Worldwide"

# 邮件接收配置
NOTIFICATION_EMAIL="admin@spaceplus.com"
HR_EMAIL="hr@spaceplus.com"
SUPPORT_EMAIL="support@spaceplus.com"

# 联系表单配置
CONTACT_WEBHOOK_URL="https://your-webhook-url.com/contact"

# 文件上传配置
UPLOAD_MAX_SIZE="10485760"  # 10MB
UPLOAD_ALLOWED_TYPES="image/jpeg,image/png,image/webp,application/pdf"
UPLOAD_PATH="./uploads"

# Redis 配置（可选，用于缓存）
REDIS_URL="redis://localhost:6379"

# 第三方服务配置
# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# 微信小程序
WECHAT_APP_ID="your-wechat-app-id"
WECHAT_APP_SECRET="your-wechat-app-secret"

# 阿里云 OSS（可选）
ALIYUN_ACCESS_KEY_ID="your-aliyun-access-key-id"
ALIYUN_ACCESS_KEY_SECRET="your-aliyun-access-key-secret"
ALIYUN_OSS_BUCKET="your-oss-bucket"
ALIYUN_OSS_REGION="oss-cn-hangzhou"

# 监控和分析
SENTRY_DSN="your-sentry-dsn"
GOOGLE_ANALYTICS_ID="your-ga-id"

# 开发环境配置
NODE_ENV="development"
DEBUG="true"
LOG_LEVEL="debug"

# 生产环境配置（仅在生产环境使用）
# NODE_ENV="production"
# DEBUG="false"
# LOG_LEVEL="error"

# 安全配置
CSRF_SECRET="your-csrf-secret"
SESSION_SECRET="your-session-secret"

# API 限流配置
RATE_LIMIT_WINDOW_MS="900000"  # 15分钟
RATE_LIMIT_MAX_REQUESTS="100"  # 每个窗口期最大请求数

# 缓存配置
CACHE_TTL="3600"  # 1小时
CACHE_MAX_SIZE="100"  # 最大缓存条目数

# 备份配置
BACKUP_SCHEDULE="0 2 * * *"  # 每天凌晨2点备份
BACKUP_RETENTION_DAYS="30"  # 备份保留30天

# 通知配置
SLACK_WEBHOOK_URL="your-slack-webhook-url"
DISCORD_WEBHOOK_URL="your-discord-webhook-url"

# 邮件模板配置
EMAIL_TEMPLATE_CONTACT_SUBJECT="新的联系表单提交"
EMAIL_TEMPLATE_JOB_APPLICATION_SUBJECT="新的职位申请"
EMAIL_TEMPLATE_STATUS_UPDATE_SUBJECT="申请状态更新"

# 自定义配置
CUSTOM_KEY="your-custom-value"